<Window x:Class="CyberSecurity_ChatBot.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberSecurity_ChatBot"
        mc:Ignorable="d"
        Title="CyberBOT Chat" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Name="ChatScroll" Height="400">
            <StackPanel x:Name="ChatStack" />
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <TextBox x:Name="txtUserInput" Width="500" Height="30" Margin="0,0,10,0"/>
            <Button Content="Send" Width="100" Click="BtnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
