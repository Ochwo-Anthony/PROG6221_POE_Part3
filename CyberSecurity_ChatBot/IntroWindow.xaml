<Window x:Class="CyberSecurity_ChatBot.IntroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberSecurity_ChatBot"
        mc:Ignorable="d"
        Title="CyberBOT" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="CyberBot" FontSize="48" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" />

        <TextBlock Text="Your Cybersecurity Awareness Assistant" FontSize="16"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0"/>

        <Button Content="Start" Width="150" Height="50"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="StartButton_Click"/>

        <TextBlock Text="© 2025 CyberBot | All rights reserved" FontSize="12"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>
